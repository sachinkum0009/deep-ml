{
    "name": "DeepML-CUDA",
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",
    
    "remoteUser": "vscode",
    
    "runArgs": [
        "--gpus", "all"
    ],

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.debugpy",
                "ms-python.python",
                "ms-python.vscode-python-envs",
                "meta.pyrefly",
                "charliermarsh.ruff"
            ]
        }
    }
}